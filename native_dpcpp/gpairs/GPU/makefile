# ==============================================================================
# Makefile for GNU make

SRC:=                      \
       load_data.cpp          \
       main.cpp


# ==============================================================================
# ############## Configure CFLAGS  #############################################
# ==============================================================================
CC          := dpcpp
QOPT        :=
FQOPT       :=f
EQCOLON     :="="
TARGET      := gpairs

CFLAGS      += -g -O3
#CFLAGS      += -DSYCL_USE_NATIVE_FP_ATOMICS
CFLAGS      += -I./

PREC ?= f
ifeq ($(PREC),d)
else
    CFLAGS += -D__DO_FLOAT__
endif

# ==============================================================================
# ############## Define make rules #############################################
# ==============================================================================

all: $(TARGET)

comp: $(TARGET)_comp

$(TARGET): data_gen.cpp main.cpp gpairs.cpp
	$(CC) $(CPPFLAGS) $(CFLAGS) $^ -o $(TARGET)

$(TARGET)_comp: data_gen_comp.cpp main.cpp gpairs_comp.cpp
	$(CC) $(CPPFLAGS) $(CFLAGS) $^ -o $(TARGET)_comp

clean:
	rm -rf *.o *.out *.optrpt *.yaml *~ gpairs gpairs_comp

.PHONY: all clean
